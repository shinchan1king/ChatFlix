<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatflix">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_chatflix_short_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_chatflix_short_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChatFlix">
        <activity
            android:name=".SplashScreen"
            android:exported="true" >
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>
        <activity
            android:name=".signup"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="false">

        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <activity
            android:name=".screens.BottomNavActivity"
            android:theme="@style/SplashTheme"
            android:configChanges="uiMode|orientation"/>


        <activity
            android:name=".screens.PopularMoviesActivity"
            android:configChanges="uiMode|orientation" />
        <activity
            android:name=".screens.PopularTvActivity"
            android:configChanges="uiMode|orientation" />
        <activity
            android:name=".screens.MovieDetailsActivity"
            android:configChanges="uiMode|orientation" />
        <activity
            android:name=".screens.TvDetailsActivity"
            android:configChanges="uiMode|orientation" />
        <activity
            android:name=".screens.SearchActivity"
            android:configChanges="uiMode|orientation" />
    </application>

</manifest>